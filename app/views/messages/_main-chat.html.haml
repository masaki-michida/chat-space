.main-chat

  .main-chat__group-info

    .main-chat__group-info__left

      .main-chat__group-info__left__group
        = @group.name
      %ul.main-chat__group-info__left__member
        Member : 
        - @group.users.each do |member|
          %li.main-chat__group-info__left__member__list 
          = member.name

    = link_to edit_group_path(@group.id) do
      .main-chat__group-info__edit Edit

  .main-chat__message-list
    = render @messages

  .main-chat__message-form

    = form_for [@group, @message] do |f|

      .main-chat__message-form__parts
      
        .main-chat__message-form__parts__new
          = f.text_field :body, class: 'main-chat__message-form__parts__new__input', placeholder: "type a message"
          %label.main-chat__message-form__parts__new__label
            = icon('far','image')
            = f.file_field :image, class: 'main-chat__message-form__parts__new__label__file'

        = f.submit 'Send', class: 'main-chat__message-form__parts__send'

